#!/usr/bin/env ruby

unless ARGV[0]
  puts "Please specify a BleakHouse logfile"
  exit
else  
  require 'rubygems'
  gem 'gruff', '= 0.2.8' # fail early if gruff is missing  
  require 'ruby-debug'
  Debugger.start    
  
  $LOAD_PATH << "#{File.dirname(__FILE__)}/../lib/"
  require 'bleak_house/analyzer'
  BleakHouse::Analyzer.build_all(ARGV[0])
end
